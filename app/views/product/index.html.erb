<h1>Product</h1>
<% if user_signed_in? %>
<p><a href="/users/edit">Личный кабинет</a></p>
<p><a href="/carts/show">Корзина</a></p>
<% else %>
<p><a href="/users/sign_in">Вход</a></p>
<p><a href="/users/sign_up">Регистрация</a></p>
<% end %>
<ul>
  <% @product.each do |product| %>
    <li>
    <%= link_to product.name, product %>
    <%= button_to "Add #{product.name} to cart", line_items_path(:product_id => product.id) %>
    </li>
  <% end %>
</ul>
<% if allowed_to?(:update?, @product) %>
<%= link_to "New product", new_product_path %>
<% end %>
